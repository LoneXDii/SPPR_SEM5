@{
    ViewBag.Title = "Index";
}


        <h1>@ViewData["Header"]</h1>
        <h2>Список</h2>
        <ol type="A">
            @for(int i = 0; i < 5; i++)
            {
                <li>элемент @i списка</li>
            }
        </ol>
        <hr class="mt-3 mb-3" />
        <h2>Форма</h2>
        <form method="post" class="mb-3">
            <div class="row">
                <div class="col-sm-10 offset-sm-2">
                    <select class="form-select" id="Model.SelectedId" name="SelDemo" asp-items="Model.ListItems">
                    </select>
                </div>
            </div>

            <!--Check boxes-->
            <div class="row">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="check1" name="checkbox1"/>
                        <label class="form-check-label" for="check1">
                            Чек-бокс 1
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="check2" name="checkbox2"/>
                        <label class="form-check-label" for="check2">
                            Чек-бокс 2
                        </label>
                    </div>
                </div>
            </div>

            <!--Radio buttons-->
            <fieldset class="row">
                <div class="col-sm offset-sm-2">
                    <input class="form-check-input" type="radio" id="radio1" name="radio" value="1"/>
                    <label class="form-check-label" for="radio1">
                        Радио-1
                    </label>
                </div>
                <div class="col-sm offset-sm-2">
                    <input class="form-check-input" type="radio" id="radio2" name="radio" value="2" />
                    <label class="form-check-label" for="radio2">
                        Радио-2
                    </label>
                </div>
                <div class="col-sm offset-sm-2">
                    <input class="form-check-input" type="radio" id="radio3" name="radio" value="3"/>
                    <label class="form-check-label" for="radio3">
                        Радио-3
                    </label>
                </div>
            </fieldset>

            <!--Input labels-->
            <div class="row">
                <label for="login" class="col-sm-2 col-form-label">
                    Логин:
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="login" 
                           name="login" placeholder="Введите имя"/>  
                </div>
            </div>
            <div class="row">
                <label for="password" class="col-sm-2 col-form-label">
                    Пароль:
                </label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password"
                           name="password" placeholder="Введите пароль" />
                </div>
            </div>

            <!--Button-->
            <button type="submit" class="btn btn-primary">Отправить</button>
        </form>
