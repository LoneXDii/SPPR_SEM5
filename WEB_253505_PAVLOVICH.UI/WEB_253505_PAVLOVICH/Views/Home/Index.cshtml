@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>
    <!--Page header-->
    <header>
        <div class="w3-container mx-5">
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">

                <!--nav links-->
                <a class="navbar-brand" href="#">25350094</a>
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="#">Лб 1</a>
                    <a class="nav-item nav-link" href="#">Каталог</a>
                    <a class="nav-item nav-link" href="#">Администрирование</a>
                </div>

                <!--cart-->
                <a href="#" class="navbar-text ms-auto">
                    00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0)
                </a>

                <!--user dropdown-->
                <div class="dropdown ms-4 nav-color">
                    <button class="btn btn-secondary dropdown-toggle"
                            type="button" id="dropdownMenuButton"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        User@gmail.com
                        <img src="images/default-avatar.png" width="30"
                             alt="User" class="rounded nav-color" />
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li>
                            <span class="dropdown-item-text">
                                <img src="images/default-avatar.png"
                                     width="50" alt="User" class="rounded" />
                                user@gmail.com
                            </span>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form id="logoutForm" class="form-inline">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                                    Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav> 
        </div>
    </header>

    <!--Page content-->
    <main>
        <div class="w3-container mx-5">
            <h1>Лабораторная работа 1</h1>
            <h2>Список</h2>
            <ol type="A">
                <li>элемент 1 списка</li>
                <li>элемент 2 списка</li>
            </ol>
            <h2>Форма</h2>
            <form method="get">  
                <!--Check boxes-->
                <div class="row mb-3 offset-sm-2">
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="check1" name="checkbox1"/>
                            <label class="form-check-label" for="check1">
                                Чек-бокс 1
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="check2" name="checkbox2"/>
                            <label class="form-check-label" for="check2">
                                Чек-бокс 2
                            </label>
                        </div>
                    </div>
                </div>

                <!--Radio buttons-->
                <fieldset class="row mb-3 offset-sm-2">
                    <div class="col-sm">
                        <input class="form-check-input" type="radio" id="radio1" name="radios" value="1"/>
                        <label class="form-check-label" for="radio1">
                            Радио-1
                        </label>
                    </div>
                    <div class="col-sm">
                        <input class="form-check-input" type="radio" id="radio2" name="radios" value="2" />
                        <label class="form-check-label" for="radio2">
                            Радио-2
                        </label>
                    </div>
                    <div class="col-sm">
                        <input class="form-check-input" type="radio" id="radio3" name="radios" value="3"/>
                        <label class="form-check-label" for="radio3">
                            Радио-3
                        </label>
                    </div>
                </fieldset>

                <!--Input labels-->
                <div class="row mb-3">
                    <label for="login" class="col-sm-2 col-form-label">
                        Логин:
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="login" 
                               name="login" placeholder="Введите имя"/>  
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="password" class="col-sm-2 col-form-label">
                        Пароль:
                    </label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password"
                               name="password" placeholder="Введите пароль" />
                    </div>
                </div>

                <!--Button-->
                <button type="submit" class="btn btn-primary">Отправить</button>
            </form>
        </div>
    </main>

    <!--Page footer-->
    <footer>
        <div class="w3-container mx-5">
            <div class="navbar navbar-dark navbar-expand-md bg-dark">
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link" href="http://www.facebook.com">
                        <i class="fa-brands fa-facebook-f fa-2x"></i>
                    </a>
                    <a class="nav-item nav-link" href="http://www.vk.com">
                        <i class="fa-brands fa-vk fa-2x"></i>
                    </a>
                    <a class="nav-item nav-link" href="http://www.twitter.com">
                        <i class="fa-brands fa-twitter fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>