@{
    ViewBag.Title = "Index";

    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();

    var categories = ViewData["Categories"] as List<Category> ?? new List<Category>();

    string? category = request.Query["category"].ToString();
    int prev = Model.CurrentPage == 1
        ? 1
        : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages
        ? Model.TotalPages
        : Model.CurrentPage + 1;
}
@model ProductListModel<Device>

<main>
    <h2>Список товаров</h2>

    <div class="row">
    <!--Category dropdown-->
        <div class="col-2 border-2">
            <ul class="nav ">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle"
                       data-bs-toggle="dropdown"
                       href="#"
                       role="button"
                       aria-expanded="false">
                       @ViewData["CurrentCategory"]
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item"
                               asp-controller="product"
                               asp-route-category=@null>Все</a>
                        </li>
                        @foreach (var item in categories)
                        {
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="product"
                                   asp-route-category="@item.NormalizedName">
                                   @item.Name
                                </a>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
        </div>

        <!--Device cards-->
        <div class="col-10">
            <div class="row row-cols-md-3 g-3">
                @foreach (var item in Model.Items)
                {
                    <div class="col p-4">
                        <div class="card h-100">
                            <img src="@item.Image" class="card-img-top max-height:200px;">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text mb2">@item.Description</p>
                                <h4 class="card-text ">@item.Price BYN</h4>
                            </div>
                            <div class="card-footer text-center">
                                <a class="btn btn-outline-primary"
                                   asp-controller="Cart" 
                                   asp-action="Add"
                                   asp-route-id="@item.Id" 
                                   asp-route-returnurl="@returnUrl">
                                    Add to cart <i class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @{
        await Html.RenderPartialAsync("_PaginationPartial", new
        {
            CurrentCategory = category,
            ReturnUrl = returnUrl,
            CurrentPage = Model.CurrentPage,
            TotalPages = Model.TotalPages,
            Devices = Model.Items,
            Admin = false
        });
    }
</main>