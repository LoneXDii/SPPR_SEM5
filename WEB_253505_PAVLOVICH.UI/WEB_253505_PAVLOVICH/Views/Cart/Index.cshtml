<main>
    <h1>Ваша корзина:</h1>
    <table class="table">
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>
                        <img src="@item.Value.Device.Image" style="max-width:150px;">
                    </td>
                    <td>
                        @item.Value.Device.Name
                    </td>
                    <td>
                        @item.Value.Device.Description
                    </td>
                    <td>
                        @item.Value.Device.Price BYN
                    </td>
                    <td>
                        @item.Value.Count шт.
                    </td>
                    <td>
                        <a class="btn btn-danger"
                           asp-action="Delete"
                           asp-controller="Cart"
                           asp-route-id="@item.Value.Device.Id">
                            <i class="fa-regular fa-trash-can"></i> Удалить
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>