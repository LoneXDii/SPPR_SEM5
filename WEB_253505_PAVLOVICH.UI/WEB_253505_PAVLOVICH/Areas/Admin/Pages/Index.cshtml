@page
@model WEB_253505_PAVLOVICH.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary"
       asp-page="Create">
        <i class="fa-solid fa-plus"></i> Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Devices[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devices[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devices[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devices[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Devices)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price
            </td>
            <td>
                    <img src="@item.Image" style="max-width:150px;">
            </td>
            <td>
                <a class="btn btn-success"
                   asp-page="./Edit" 
                   asp-route-id="@item.Id">
                    <i class="fas fa-edit"></i> Edit
                </a>

                <a class="btn btn-info" 
                   asp-page="./Details" 
                   asp-route-id="@item.Id">
                    <i class="fa-solid fa-info"></i> Details
                </a>

                <a class="btn btn-danger" 
                   asp-page="./Delete" 
                   asp-route-id="@item.Id">
                    <i class="fa-regular fa-trash-can"></i> Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
