@page
@model WEB_253505_PAVLOVICH.UI.Areas.Admin.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Информация об устройстве</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Name)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Description)
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Price)
        </dd>
        <dt class="col-sm-2">
            Изображение
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Device.Image" style="max-width:150px;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Device.Id">Редактировать</a> |
    <a asp-page="./Index">Вернуться к списку устройств</a>
</div>
