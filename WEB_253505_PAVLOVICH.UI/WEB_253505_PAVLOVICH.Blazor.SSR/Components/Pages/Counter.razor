@page "/counter/{currentCount:int?}"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div class="container">
    <EditForm OnValidSubmit="HandleValidSubmit" Model="@counter">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <InputNumber class="form-control" @bind-Value="counter.Value" />
        <button class="btn btn-secondary" type="submit">Set value</button>
    </EditForm>
</div>

@code {
    CounterModel counter = new CounterModel();  

    [Parameter]
    public int currentCount { get; set; } = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void HandleValidSubmit()
    {
        currentCount = counter.Value;
    }
}
